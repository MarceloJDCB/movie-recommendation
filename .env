# Configurações do MongoDB
MONGO_URL=mongodb://mongo:27017
DATABASE_NAME=myfastapidb

# Configurações da API
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=FastAPI MongoDB API
API_DESCRIPTION=API RESTful com FastAPI e MongoDB utilizando Motor
API_VERSION=0.1.0

# Configurações de CORS
# Separe múltiplas origens com vírgulas
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Configurações de Autenticação
JWT_SECRET_KEY=your-secret-key-should-be-at-least-32-characters-long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_DAYS=7